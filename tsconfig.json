{
  "include": ["src", "example", "test"],
  "compilerOptions": {
    "types": ["@cloudflare/workers-types"],
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": true,
    "lib": ["ES2022"],
    "target": "ES2022"
  }
}
